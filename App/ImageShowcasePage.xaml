<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:App"
             x:Class="App.ImageShowcasePage">

    <Grid
        Padding="30,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Image x:Name="Photo" Source="loading_image.png" Grid.Row="0" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" BackgroundColor="gray" Aspect="AspectFill" />

        <Button
            Grid.Row="1"
            Text="Go back"
            Clicked="goback_button"
            HorizontalOptions="FillAndExpand" />
    </Grid>

</ContentPage>
